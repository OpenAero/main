{
  "name": "OpenAero",
  "description" : "Aerobatic sequence creation software",
  "version": "2018.1",
  "manifest_version": 2,
  "minimum_chrome_version": "26",

  "permissions": [
    "storage",
    {"fileSystem": ["write"]},
    "https://openaero.net/openaero.php",
    "https://www.google-analytics.com/analytics.js"
  ],
  
  "url_handlers": {
    "openaero_stable": {
      "matches": [
        "https://openaero.net/*",
        "https://www.openaero.net/*"
      ],
      "title": "OpenAero"
    }
  },
  
  "file_handlers": {
    "any": {
      "extensions": [
        "seq"
      ]
    }
  },
  
  "app": {
    "background": {
      "scripts": [
        "js/background.js"
      ]
    }

  },
  
  "icons": {
    "16" : "img/favicons/favicon16.png",
    "128": "img/favicons/favicon96in128.png"
  }
}
